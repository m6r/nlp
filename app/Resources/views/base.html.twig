  <div class="container">
    <section id="maincontent" class="text-justify">
      <div class="row">
        <div class="col-md-12">
          {% set flashes = app.session.flashbag.all() %}
          {% set css = {'error': 'warning', 'success': 'success'} %}

          {% if flashes | length > 0 %}
            {% for type, messages in flashes %}
              {% for message in messages %}
                <div class="alert alert-{{ css[type] }}">{{ message }}</div>
              {% endfor %}
            {% endfor %}
          {% endif %}
          {% block center_content %}
          {% endblock %}

        </div>


      </div><!--/.row-->
    </section><!--/#maincontent-->
    <hr>
    <footer class="footer">
      <!-- START FOOTER -->
      {#include file=$tpl_footer.".tpl"#}
      <!-- END FOOTER -->
    </footer>

  </div><!--/.container-->

